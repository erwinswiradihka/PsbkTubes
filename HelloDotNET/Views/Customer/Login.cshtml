@model HelloDotNET.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    
    @Html.AntiForgeryToken()          
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
        {
        <div style="border:1px solid red">
            @ViewBag.Message
        </div>
    }


<div class="uk-vertical-align uk-text-center uk-height-1-1">
    <div class="uk-vertical-align-middle" style="width: 250px;">

        <img class="uk-margin-bottom" width="140" height="120" src="../img/4speedcode-logo-winged-fix-white.png" alt="">
        <h2>Login Customer</h2>
        <form class="uk-panel uk-panel-box uk-form">
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="text" placeholder="Username" 
                @Html.EditorFor(a => a.Username)
                       
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="password" placeholder="Password"
                @Html.EditorFor(a => a.Kunci)
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-button uk-button uk-button-primary uk-button-large" type="submit" value="Login" />
            </div>
            <div class="uk-form-row">
                <a class="uk-width-1-1 uk-button uk-button-primary uk-button-large" href="@Url.Action("RegisterCustomer", "Customer")">Sign Up</a>
            </div>
            
        </form>

    </div>
</div>


}