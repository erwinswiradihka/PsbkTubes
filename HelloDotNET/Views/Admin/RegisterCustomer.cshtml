@model HelloDotNET.Login
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="uk-vertical-align uk-text-center uk-height-1-1">
    <div class="uk-vertical-align-middle" style="width: 250px;">

        <img class="uk-margin-bottom" width="140" height="120" src="../img/4speedcode-logo-winged-fix-white.png" alt="">
        <h2>Register</h2>
        <div class="uk-panel uk-panel-box uk-form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="text" placeholder="First Name" 
                @Html.EditorFor(model => model.Firstname)     
                @Html.ValidationMessageFor(model => model.Firstname)
            </div>
            
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="text" placeholder="Last Name" 
                       @Html.EditorFor(model => model.lastname)
                       @Html.ValidationMessageFor(model => model.lastname)</div>

            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="text" placeholder="Username" 
                       @Html.EditorFor(model => model.Username)
                       @Html.ValidationMessageFor(model => model.Username)</div>

            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="password" placeholder="Password" 
                        @Html.EditorFor(model => model.Kunci)
                        @Html.ValidationMessageFor(model => model.Kunci)
            </div>
            <div class="uk-form-row">
                <input class="uk-button uk-button-primary" type="submit" value="SIGN UP" />
                </div>
                
}
            
    </div>
</div>