@model IEnumerable<HelloDotNET.Login>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<body>

    <div class="tes">
        <div class="logo">
            <img src="../img/4speedcode-logo.png" width="115" height="120" alt="logo">
        </div>
    </div>

    
    <div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">

        <nav class="uk-navbar uk-margin-large-bottom navbar">

            <a class="uk-navbar-brand uk-hidden-small" href="@Url.Action("Index", "Hello")">Home</a>
            <ul class="uk-navbar-nav uk-hidden-small">
               
                <li>
                    <a href="@Url.Action("Index", "Servi")">Service</a>
                </li>
                <li>
                    <a href="@Url.Action("Event", "Hello")">Event</a>
                </li>
                
                
            </ul>
            <a href="#offcanvas" class="uk-navbar-toggle uk-visible-small" data-uk-offcanvas=""></a>
            <div class="uk-navbar-brand uk-navbar-center uk-visible-small">Home</div>
        </nav>
        <h2>Pengelolaan Customer</h2>

    <p>
        <a class="uk-button uk-button-primary" @Html.ActionLink("Create New", "Create")
</p>
    <table class="uk-table uk-table-middle">
        <tr>
            <th>
                ID
            </th>
            <th>
                User Name
            </th>
            <th>
                Password
            </th>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kunci)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastname)
                </td>
              
                <td>
                    <a class="uk-button uk-button-success" @Html.ActionLink("Edit", "Edit", new { id = item.Id_User })|
                        <a class="uk-button uk-button-primary" @Html.ActionLink("Details", "Details", new { id = item.Id_User }) |
                        <a class="uk-button uk-button-danger"  @Html.ActionLink("Delete", "Delete", new { id = item.Id_User })</td>
            </tr>
        }

    </table>


    <div class="uk-tooltip"></div>
</body>










