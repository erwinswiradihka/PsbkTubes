@model HelloDotNET.Servi

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<body>
    <div class="tes">
        <div class="logo">
            <img src="../img/4speedcode-logo.png" width="115" height="120" alt="logo">
        </div>
    </div>

    <div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">

        <nav class="uk-navbar uk-margin-large-bottom navbar">

            <a class="uk-navbar-brand uk-hidden-small" href="@Url.Action("Index", "AfterLogin")">Home</a>
            <ul class="uk-navbar-nav uk-hidden-small">
                <li>
                    <a href="@Url.Action("Product", "AfterLogin")">Product</a>
                </li>
                <li>
                    <a href="@Url.Action("Create", "Servi")">Service</a>
                </li>
                <li>
                    <a href="@Url.Action("About_Us", "Hello")">About Us</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Hello")">Logout</a>
                </li>
            <a href="#offcanvas" class="uk-navbar-toggle uk-visible-small" data-uk-offcanvas=""></a>
            <div class="uk-navbar-brand uk-navbar-center uk-visible-small">Home</div>
        </nav>
        <div class="uk-panel">
            <div class="uk-grid">
                
                        <h2>Daftar Service</h2>
                <br>
                <br>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

   

                            <fieldset>
                                <div class="editor-label">
                                    Tanggal Pembelian
                                </div>
                                
                                <div class="editor-field">

                                    @Html.EditorFor(model => model.Tanggal_Pembelian)
                                    @Html.ValidationMessageFor(model => model.Tanggal_Pembelian)
                                    masukan seperti contoh disamping 2/2/2012

                                </div>

                                <div class="editor-label">
                                    Nama Produk
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Nama_produk)
                                    @Html.ValidationMessageFor(model => model.Nama_produk)
                                </div>
                                <div class="editor-label">
                                    Nama Pengguna
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Username)
                                    @Html.ValidationMessageFor(model => model.Username)
                                </div>

                                <p>
                                    <input class="uk-button uk-button-primary" type="submit" value="Daftar" />
                                </p>

                                <p>
                                    <a class=" uk-button uk-button-primary lihat" href="@Url.Action("Servic", "Servi")">Lihat Service</a>

                                </p>
                            </fieldset>
                        }

                        
            
                        
                    </div>
                </div>
            </div>

          
       
