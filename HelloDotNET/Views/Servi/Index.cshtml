            <h2>Pengelolaan Service</h2>
            <p>
                <a class="uk-button uk-button-primary" @Html.ActionLink("Create New", "Create")
            </p>
            <table class="uk-table uk-table-middle">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id_Service)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tanggal_Pembelian)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nama_produk)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status_Service)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id_Service)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tanggal_Pembelian)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nama_produk)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status_Service)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            <a class="uk-button uk-button-success" @Html.ActionLink("Edit", "Edit", new { id = item.Id_Service }) |
                            <a class="uk-button uk-button-danger" @Html.ActionLink("Delete", "Delete", new { id = item.Id_Service })
                        </td>
                    </tr>
                }

            </table>
